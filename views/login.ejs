{% title = "Logg inn"; %}
{% sitat = "Ånei.. Det er så lenge siden sist påske! Jeg har glemt hva passordet mitt er! Kan du hjelpe meg med å logge inn?"; %}

{% include header %}
<form action="/login" method="POST" class="card">
    {% if (typeof error != 'undefined') { %}
    <p class="error">{%=error%}</p>
    {%}%}
    <label for="username"><b>Brukernavn</b></label>
    <input type="text" placeholder="Brukernavn" name="username">
    <label for="password"><b>Passord</b></label>
    <input type="password" placeholder="Passord" name="password">

    <input type="submit" value="Logg inn">
</form>

{% include footer %}